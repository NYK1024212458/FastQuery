<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="300dp"
        android:layout_height="360dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_dialog_background"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingTop="20dp"
        android:paddingRight="25dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="在线客服"
            android:textColor="#333333"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_customer_img"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="1. 长按二维码保存至相册"
            android:textColor="#ff666666"
            android:textSize="9sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="2. 打开微信>“扫一扫”>右上角“相册”>选取二维码"
            android:textColor="#ff666666"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_cope_customer_background"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="一键复制客服小姐姐1"
            android:textColor="#ffffffff"
            android:textSize="9sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_customer_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信账号："
                android:textColor="#3C5967" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4546545232132"
                android:textColor="#FF0000"
                android:textSize="10sp" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="1. 点击下方按钮（自动复制微信号并打开微信）"
            android:textColor="#ff666666"
            android:textSize="9sp" />


        <TextView
            android:id="@+id/mast_fix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2. 点击右上角“+”>选择“添加朋友”>粘贴微信号>搜索添加"
            android:textColor="#ff666666"
            android:textSize="9sp" />

    </LinearLayout>

    <ImageView
        android:padding="10dp"
        android:id="@+id/iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="5dp"
        android:background="@drawable/guanbi" />

</LinearLayout>