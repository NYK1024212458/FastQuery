<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    </FrameLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">


            <LinearLayout
                android:id="@+id/location_seek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_location_seek"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/dingwei1" />

                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/tv_location_seek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定位查询"
                    android:textColor="#ff333333"
                    android:textSize="9sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/quick_seek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_quick_seek"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/jingzhun1" />

                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/tv_quick_seek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精确查询"
                    android:textColor="#ff333333"
                    android:textSize="9sp"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/video_demo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_video_demo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/video1" />

                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/tv_video_demo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="演示视频"
                    android:textColor="#ff333333"
                    android:textSize="9sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/mine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_mine"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/mine1" />

                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/tv_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人中心"
                    android:textColor="#ff333333"
                    android:textSize="9sp"  />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>